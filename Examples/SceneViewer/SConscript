Import('*')

sources = Split("""
    OSGMainView_qt.cpp
    OSGSceneView_qt.cpp
    main.cpp
""")

def custom(env):
    env['CXXFILESUFFIX'] = '.cpp'
    
if tc.is_win32():
    dep_LIBS = []
else:
    dep_LIBS = ['OSGWindowX${OSG_LIBSUF}']


BuildProgram(tc, 'osgSceneViewer', sources, tools=['qt'], updates=[custom],
             CPPPATH=['.', env['PREFIX'].Dir('include')],
             LIBPATH=[env['PREFIX'].Dir('lib')],
             LIBS=['OSGWindowQT${OSG_LIBSUF}', 'OSGSystem${OSG_LIBSUF}', 'OSGBase${OSG_LIBSUF}'] + dep_LIBS,
             CPPDEFINES=['OSG_WITH_QT', 'OSG_BUILD_DLL'])
