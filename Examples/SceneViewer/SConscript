Import('*')

sources = Split("""
    OSGMainView_qt.cpp
    OSGSceneView_qt.cpp
    main.cpp
""")

def custom(env):
    env['CXXFILESUFFIX'] = '.cpp'
    
if tc.is_win32():
    dep_LIBS = []
else:
    dep_LIBS = ['OSGWindowX']


BuildProgram(tc, 'osgSceneViewer', sources, tools=['qt'],
             updates=[custom, OpenSGLibrary(['OSGWindowQT', 'OSGSystem', 'OSGBase'] + dep_LIBS)],
             CPPPATH=['.', env['PREFIX'].Dir('include')],
             CPPDEFINES=['OSG_WITH_QT', 'OSG_BUILD_DLL'])
