
INCLUDE_GL := @ac_gdz_gl_incdir_e8@
LINK_GL    :=

ifeq ($(OS_BASE), cygwin)
LIB_GL   := opengl32.lib glu32.lib gdi32.lib
else
LIB_GL   := -lGLU -lGL 

ifneq ($(OS_BASE), darwin1.4)
LIB_GL   := $(LIB_GL) -lXmu -lXi -lXt -lX11
endif
endif

ifneq ($(INCLUDE_GL),)
INCL_$(OS_BASE) += $(INC_OPTION)$(INCLUDE_GL)
endif

ifneq ($(LINK_GL),)
LIBPATHS_GL     := $(LIBPATH_OPTION)$(LINK_GL)
endif

ifneq ($(LIB_GL),)
LIB_FILE_GL     := $(LIB_GL)
LIB_FILE_GL_LNK := $(LIB_GL)
endif

