<?xml version="1.0"?>

<FieldContainer
	name="TextureChunk"
	parent="StateChunk"
	library="System"
	pointerfieldtypes="both"
	structure="concrete"
	systemcomponent="true"
	parentsystemcomponent="true"
>
	<Field
		name="image"
		type="ImageP"
		cardinality="single"
		visibility="external"
		access="public"
		defaultValue="0"
	>
	</Field>
	<Field
		name="internalFormat"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_NONE"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
	The internal texture format.
	</Field>
	<Field
		name="externalFormat"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_NONE"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
	The external texture format - overwrites 
        external format of image when set to a value not equal to 
        GL_NONE (which is the default).
	</Field>
	<Field
		name="scale"
		type="bool"
		cardinality="single"
		visibility="external"
		defaultValue="true"
		access="public"
	>
        Specifies whether the image should be scaled to the next power of two,
        thus filling the whole texture coordinate range, or if it should be put
        in the lower left corner, leaving the rest of the texture undefined.
        This is mainly used for rapidly changing non power of two textures, to
        get around the scaling overhead.
	</Field>
	<Field
		name="frame"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="0"
		access="public"
	>
        Select the frame of the image to be used. See osg::Image about details
        concerning multi-frame images.
        \hint For fast update use GL_LINEAR or GL_NEAREST filters, as mipmap
        creation is slow right now. \endhint
	</Field>
	<Field
		name="minFilter"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_LINEAR_MIPMAP_LINEAR"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
        The minimisation filter, default GL_LINEAR_MIPMAP_LINEAR.
	</Field>
	<Field
		name="magFilter"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_LINEAR"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
        The magnification filter, default GL_LINEAR.
	</Field>
	<Field
		name="wrapS"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_REPEAT"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
        Texture coordinate S wrapping, default GL_REPEAT.
	</Field>
	<Field
		name="wrapT"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_REPEAT"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
        Texture coordinate T wrapping, default GL_REPEAT.
	</Field>
	<Field
		name="wrapR"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_REPEAT"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
        Texture coordinate R wrapping, default GL_REPEAT.
	</Field>
	<Field
		name="envMode"
		type="UInt32"
		cardinality="single"
		visibility="external"
		defaultValue="GL_REPLACE"
		defaultHeader="<OSGGL.h>"
		access="public"
	>
        Texture environment mode, default GL_REPLACE
	</Field>
	<Field
		name="envColor"
		type="Color4f"
		cardinality="single"
		visibility="external"
		defaultValue="0,0,0,0"
		access="public"
	>
        Texture environment color default transparent black.
	</Field>
	<Field
		name="GLId"
		type="UInt32"
		cardinality="single"
		visibility="internal"
		access="public"
		defaultValue="0"
	>
        The OpenGL texture id for this texture.
	</Field>
</FieldContainer>
