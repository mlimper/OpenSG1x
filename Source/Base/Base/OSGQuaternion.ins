OSG_BEGIN_NAMESPACE

// The following macros provide specializations of the input/output operators
// for the Quaternion template. They are used to generate these
// for all built in quaternion types of OpenSG.
// Use them in your own code if you need to use other types than
// those provided.

#define OSG_QUATERNION_OUTPUT_OP_INST(OSG_VALUE_TYPE)                          \
template <> OSG_DLL_EXPORT                                                     \
std::ostream &operator <<(                                                     \
    std::ostream &os, const QuaternionBase< OSG_VALUE_TYPE > &obj)             \
{                                                                              \
    VecToStreamWriter< QuaternionBase< OSG_VALUE_TYPE >,                       \
                       OSG_VALUE_TYPE,                                         \
                       4                                >::apply(os, obj);     \
                                                                               \
    return os;                                                                 \
}

#define OSG_QUATERNION_INPUT_OP_INST(OSG_VALUE_TYPE)                           \
template <> OSG_DLL_EXPORT                                                     \
std::istream &operator >>(                                                     \
    std::istream &is, QuaternionBase< OSG_VALUE_TYPE > &obj)                   \
{                                                                              \
    VecFromStreamReader< QuaternionBase< OSG_VALUE_TYPE >,                     \
                         OSG_VALUE_TYPE,                                       \
                         4                                >::apply(is, obj);   \
                                                                               \
    return is;                                                                 \
}

OSG_END_NAMESPACE
