
# little wrapper script to call dailybuild

source ~/.bashrc

# get the latest dailybuild script
rcp rubens:/igd/a4/opensg/reiners/opensg/OpenSG/dist/dailybuild .

# remove old logs
rm -f opensg_dailybuild*

# setup needed envvars

# needed for Intel V5 compiler
export LM_LICENSE_FILE='f:\Program Files\Intel\Licenses\w_cpp.lic'

# do the build
bash ./dailybuild > log 2>&1
