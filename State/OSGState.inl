OSGStateChunkPtr OSGState::getChunk( OSGUInt32 id )
{
	if ( id < _chunks.size() )
		return _chunks.getValue( id );
	
	return OSGNullStateChunk;
}

OSGBool OSGState::chunkPresent( OSGUInt32 id )
{
	return	id < _chunks.size() && 
			_chunks.getValue( id ) != OSGNullStateChunk ;
}

OSGBool OSGState::chunkPresent( OSGStateChunkPtr chunk )
{
	return chunkPresent( chunk->getClassID() );
}

